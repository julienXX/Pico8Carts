pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
t=0

function _init()
  player = {sp=1,x=64,y=64}
end

function _update()
  cls()
  animate()
  move()
end

function _draw()
  spr(player.sp,player.x,player.y)
end

function animate()
  t+=1
  if(t%8<4) then
    player.sp = 1
  else
    player.sp=2
  end
end

function move()
  if (btn(0)) then player.x -= 1 end
  if (btn(1)) then player.x += 1 end
  if (btn(2)) then player.y -= 1 end
  if (btn(3)) then player.y += 1 end
end
